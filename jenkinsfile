pipeline{
    agent {
        node {
            label "linux && java11"
        }
    }
    stages{
        stage('Build'){
            steps{
                echo 'this is build'
            }
        }
        stage('Test'){
            steps{
                echo 'this is test'
            }
        }
        stage('Deploy'){
            steps{
                echo 'this is Deploy'
            }
        }
    }

    post{
        always{
            echo "I will say Hello again"
        }
        success{
            echo "Huraa sukses"
        }
        failure{
            echo "shitt, its not good"
        }
        cleanup{
            echo "this is last time"
        }
    }
}