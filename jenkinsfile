pipeline{
    agent {
    node{
        label 'linux && java11'
    }
    }
    tools {
            maven 'Apache Maven 3.8.7' // Nama konfigurasi Maven yang Anda tambahkan
    }
    stages {
            stage('Build') {
                steps {
                    echo 'Building the application...'
                    sh 'mvn clean package'
                }
            }
            stage('Test') {
                steps {
                    echo 'Running tesets...'
                    sh 'mvn test'
                }
            }
            stage('Deploy') {
                steps {
                    echo 'Deploying the application...'
                    withCredentials([sshUserPrivateKey(credentialsId: 'github-jvadrn', keyFileVariable: 'SSH_KEY')]) {
                    sh '''
                    scp -i $SSH_KEY target/my-app-1.0-SNAPSHOT.jar root@157.245.199.194:/path/to/deploy/
                    ssh -i $SSH_KEY root@157.245.199.194 'java -jar /path/to/deploy/my-app-1.0-SNAPSHOT.jar &'
                    '''
                }
            }
        }
        post {
            always {
                echo 'Cleaning up...'
            }
            success {
                echo 'Pipeline succeeded!'
            }
            failure {
                echo 'Pipeline failed!'
            }
        }
    }
}